<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>FrontControleur</servlet-name>
        <servlet-class>controleur.FrontControleur</servlet-class>
        <init-param>
            <param-name>CreationDeDonneesCtrl</param-name>
            <param-value>sousControleurs.CreationDeDonneesCtrl</param-value>
        </init-param>
        <init-param>
            <param-name>CatalogueCtrl</param-name>
            <param-value>sousControleurs.CatalogueCtrl</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>FrontControleur</servlet-name>
        <url-pattern>/FrontControleur</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <ejb-local-ref>
        <ejb-ref-name>CreationDeDonnees</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>metiers.CreationDeDonneesLocal</local>
        <ejb-link>MacDo-ejb.jar#CreationDeDonnees</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>Catalogue</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>metiers.CatalogueLocal</local>
        <ejb-link>MacDo-ejb.jar#Catalogue</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>Catalogue1</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>metiers.CatalogueLocal</local>
        <ejb-link>MacDo-ejb.jar#Catalogue</ejb-link>
    </ejb-local-ref>
</web-app>
